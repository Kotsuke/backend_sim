# Coverage configuration for SmartInfra Backend

[run]
source = .
omit =
    */tests/*
    */venv/*
    */__pycache__/*
    */site-packages/*
    */.venv/*
    */test_*.py
    *_test.py
    conftest.py

[report]
# Show missing lines
show_missing = True

# Exclude lines from coverage
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod

# Precision for coverage percentage
precision = 2

[html]
directory = htmlcov
